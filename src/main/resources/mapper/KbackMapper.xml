<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.andios.tourism.mapper.KpeopleMapper">
    <update id="updateByIds" parameterType="com.andios.tourism.pojo.KpeoplePojo">
        UPDATE peopleflow SET pname=#{pname}, flow=#{flow}, `data`=#{data} WHERE (pid = #{pid})
    </update>
</mapper>